error = <%= !@subscription.errors.empty? %>;
errors = <%= @subscription.errors.messages.to_json.html_safe %>;
$('small.msg').remove();
if(error){
  html = "<small class=\"msg\" style=\"color:#fff;\">"+errors.email[0]+"</small>"
  $('.input-email').parents('form').append(html);
}else{
  html = "<small class=\"msg\" style=\"color:#fff;\">Oops! We are currently waitlisting new subscribers, and will notify you when openings are available. Thank you :)</small>"
  $('.input-email').parents('form').append(html);
  $('.input-email').val('');
}